<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Ustawienie koloru tekstu -->
        <item name="android:editTextColor">@android:color/white</item>
        <!-- Ustawienie koloru podpowiedzi (hint) -->
        <item name="android:textColorHint">@android:color/white</item>
    </style>


    <style name="CustomToggleButton">
        <item name="android:background">@drawable/toggle_button_on</item>
        <item name="android:textColor">#FFFFFF</item> <!-- White text -->
        <item name="android:textOn">Done</item>
        <item name="android:textOff">Todo</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">@dimen/addEditFieldSize</item>
    </style>


</resources>